<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_item_contact"
    android:layout_marginBottom="1dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/image_contact"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/background_card_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/Subtitle"
        android:id="@+id/title_contact"
        android:text="Leslie Moss"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/subtitle_contact"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/image_contact"
        app:layout_constraintTop_toTopOf="@+id/image_contact"/>

    <TextView
        style="@style/Body1"
        android:id="@+id/subtitle_contact"
        android:layout_marginStart="16dp"
        android:text="Sister"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_contact"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/image_contact"
        app:layout_constraintBottom_toBottomOf="@+id/image_contact"/>
</androidx.constraintlayout.widget.ConstraintLayout>