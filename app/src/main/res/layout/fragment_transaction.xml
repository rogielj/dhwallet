<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TransactionFragment">

    <View
        android:id="@+id/background_header"
        android:background="@drawable/background_card_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/guide_line_trans"/>

    <TextView
        style="@style/Body1"
        android:id="@+id/title_desc_left"
        android:layout_marginTop="70dp"
        android:layout_marginStart="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entradas"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/guide_line_top"
        app:layout_constraintStart_toStartOf="@+id/start"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/value_left"
        android:layout_marginTop="90dp"
        android:layout_marginStart="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="R$ 00,00"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/guide_line_top"
        app:layout_constraintStart_toStartOf="@+id/start"/>

    <TextView
        style="@style/Body1"
        android:id="@+id/title_desc_right"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saídas"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/guide_line_top"
        app:layout_constraintEnd_toEndOf="@+id/end"/>
    <TextView
        android:textStyle="bold"
        android:id="@+id/value_right"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="R$ 000"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/guide_line_top"
        app:layout_constraintEnd_toEndOf="@+id/end"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="55dp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="30dp"
        android:src="@drawable/ic_arrow_downaward"
        app:layout_constraintTop_toBottomOf="@+id/guide_line_top"
        app:layout_constraintStart_toStartOf="@+id/start"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="55dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="130dp"
        android:src="@drawable/ic_arrow_upward"
        app:layout_constraintTop_toBottomOf="@+id/guide_line_top"
        app:layout_constraintEnd_toEndOf="@+id/end"/>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Transações"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_backward"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView

            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="centerCrop"
            android:src="@drawable/foto" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="60dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_line_trans"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="223dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"/>

    <TextView
        style="@style/Subtitle"
        android:textStyle="bold"
        android:id="@+id/title_transaction_inicial"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transferir"
        android:drawablePadding="240dp"
        android:drawableEnd="@drawable/ic_arrow_forward"
        app:layout_constraintStart_toStartOf="@+id/start"
        app:layout_constraintEnd_toEndOf="@+id/end"
        app:layout_constraintBottom_toTopOf="@id/recycler_trans"
        app:layout_constraintTop_toBottomOf="@id/background_header"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_trans"
        android:layout_marginTop="0dp"
        tools:itemCount="10"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_transaction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_transaction_inicial"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>